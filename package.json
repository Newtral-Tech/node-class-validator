{
  "name": "@newtral/class-validator",
  "version": "0.0.0-development",
  "description": "Decorator based validation augmenting the class-validator module",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": "Lorens Leon <lorens.leon@newtral.es>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Newtral-Tech/node-class-validator.git"
  },
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "engines": {
    "node": ">=10.18"
  },
  "keywords": [
    "newtral",
    "class-validator",
    "validator"
  ],
  "dependencies": {
    "@types/bson": "*"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/faker": "^4.1.12",
    "@types/mocha": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "bson": "^4.0.4",
    "chai": "^4.2.0",
    "class-validator": "^0.12.2",
    "concurrently": "^5.2.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~3.9.7"
  },
  "peerDependencies": {
    "class-validator": "^0.12.2"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "concurrently 'yarn:build:*'",
    "build:commonjs": "tsc",
    "build:esm": "tsc --module es2020 --outDir esm",
    "clean": "rm -rf lib esm reports tsconfig.tsbuildinfo",
    "test": "mocha --require tests/entry.js 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc yarn test",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "yarn lint --fix",
    "health": "yarn && yarn clean && yarn lint && yarn build --noEmit && yarn test --reporter dot",
    "ci": "yarn && yarn lint && yarn build --noEmit && yarn test",
    "prepublishOnly": "yarn build",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  }
}
